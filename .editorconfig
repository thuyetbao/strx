# http://editorconfig.org

root = true

[*]
charset = utf-8
# end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
indent_size = 2
indent_style = space

[*.py]
indent_size = 4
indent_style = space

[*.{yml,yaml,json}]
indent_size = 2
indent_style = space

[*.sh]
indent_size = 4
indent_style = tab

[Makefile]
indent_size = 4
indent_style = tab
